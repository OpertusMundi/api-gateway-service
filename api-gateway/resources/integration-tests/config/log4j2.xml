<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_ERR">
            <PatternLayout 
                pattern="%d{yyyy-MM-dd HH:mm:ss} %16X{client.remote-address} %-5p %c{1}:%L - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>
